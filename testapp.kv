<GameView>:
    result_label:result_label
    answer_input:answer_input
    BoxLayout:
        orientation: "vertical"
        Label:
            id: result_label
            text: "Find the number"
            font_size: 0.4*answer_input.height
            size_hint: 1, 1
        TextInput:
            id: answer_input
            font_size: 0.8*answer_input.height
            input_type: "number"
            multiline: False
            size_hint: 1, 0.25
        Button:
            text: "Validate"
            font_size: 0.4*answer_input.height
            on_press: root.find_target()
            size_hint: 1, 0.5




